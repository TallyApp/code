{
  "name": "Tally",
  "description": "Tally your pins!",
  "version": "0.0.2",
  "icons": {
    "16": "icons/tally_icon_16x16.png",
    "32": "icons/tally_icon_32x32.png",
    "48": "icons/tally_icon_48x48.png",
    "128": "icons/tally_icon_128x128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Tally your pins!",
    "default_icon": {
      "19": "icons/browsericons/icon19-off.png",
      "38": "icons/browsericons/icon38-off.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.pinterest.com/*",
        "https://www.pinterest.com/*"
      ],
      "js": [
        "lib/jquery.js",
        "lib/lodash.min.js",
        "scripts/tally.js"
      ]
    }
  ],
  "manifest_version": 2
}
